---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/Base.astro";
import Posts from "../components/PostList.astro";

const posts = await getCollection("blog");
---

<BaseLayout title="Welcome to Astro.">
  <main>
    <header>
      <h1>Blog posts</h1>
    </header>
    <Posts posts={posts} />
  </main>
</BaseLayout>
