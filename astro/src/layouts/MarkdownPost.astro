---
import Layout from '../layouts/Base.astro';

interface Props {
	title: string;
  date: Date;
  minutesRead: string,
};

const { title, date, minutesRead } = Astro.props;
---

<Layout title={title}>
    <article>
      <header>
        <h1>{title}</h1>
        <div id="post-meta">
          <time datetime={date.toUTCString()}>
            {date.toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' })}
          </time> Â· {minutesRead}
        </div>
      </header>
      <div id="post-body">
        <slot />
      </div>
    </article>
  </Layout>