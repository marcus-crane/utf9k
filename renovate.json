{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(marcus-crane)"
  ],
  "prHourlyLimit": 10,
  "npm": {
    "minimumReleaseAge": "3 days"
  },
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
