{
  "name": "utf9k",
  "version": "1.0.0",
  "description": "My personal site",
  "repository": "git@github.com:marcus-crane/utf9k",
  "author": "Marcus Crane <marcus@utf9k.net>",
  "license": "MIT",
  "scripts": {
    "start": "COMMIT_SHA=main hugo server --disableFastRender",
    "build": "COMMIT_SHA=$(git rev-parse --short HEAD) NODE_ENV=production hugo --gc",
    "build:prod": "pnpm run setup-python && pnpm run gather-files && pnpm run download-dotfiles && pnpm run generate-fancy-links && pnpm run gather-image-metadata && pnpm run build",
    "lint": "eslint assets/js",
    "setup-python": "pip install -U pip && pip install -r scripts/requirements.txt",
    "gather-files": "python scripts/gather-filesizes.py",
    "generate-fancy-links": "python scripts/generate-fancylinks.py",
    "download-dotfiles": "python scripts/download-dotfiles.py",
    "gather-image-metadata": "python scripts/gather-image-metadata.py"
  },
  "devDependencies": {
    "eslint": "^7.32.0"
  },
  "dependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "autoprefixer": "^10.3.1",
    "node-fetch": "^2.6.1",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1"
  }
}
