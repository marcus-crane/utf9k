{
  "name": "utf9k",
  "version": "1.0.0",
  "description": "My personal site",
  "repository": "git@github.com:marcus-crane/utf9k",
  "author": "Marcus Crane <marcus@utf9k.net>",
  "license": "MIT",
  "scripts": {
    "start": "COMMIT_SHA=main hugo server --disableFastRender",
    "start:wideband": "COMMIT_SHA=main hugo server --disableFastRender --bind 0.0.0.0 --baseURL http://$(ifconfig en1 | grep 'inet ' | awk '{ print $2 }')",
    "build": "COMMIT_SHA=$(git rev-parse --short HEAD) NODE_ENV=production hugo --gc",
    "build:deps": "./ci/install.sh",
    "build:metadata": "./ci/genmetadata.sh",
    "watch:metadata": "git ls-files --directory content/**/**/*.md --directory scripts/*.py | entr yarn run build:metadata",
    "deploy": "./ci/deploy.sh",
    "lint": "eslint assets/js",
    "test": "./ci/test.sh",
    "prettify": "prettier --write --print-width 120 public/**/**/**/*.html",
    "syntax": "prettier -c public/**/**/**/*.html"
  },
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@babel/preset-env": "7.20.2",
    "eslint": "8.30.0",
    "prettier": "^2.8.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "littlefoot": "3.4.1",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0"
  }
}
