    {{ if ["blog", "reviews"].includes(category) || lastmod }}
    <div id="post-meta">
      {{ if ["blog", "reviews"].includes(category) }}<time datetime="{{ date }}">{{ date |> date('MMMM d, yyyy') }}</time> {{ if lastmod }} <span>Â·</span> {{ /if }} {{ /if }}
      {{ if lastmod }}<time datetime="{{ lastmod }}"> Last updated on {{ lastmod |> date('MMMM d, yyyy') }}</time>{{ /if }}
    </div>
    {{ /if }}
