<article class="full">
  <div id="home-wrapper">
    <div id="welcome-message">
      <center>
        <header>
          <h1>Welcome!</h1>
        </header>
        {{ content | safe }}
      </center>
      <hr />
      <center>
        <header>
          <h3>Here's a random(ly generated) thought</h3>
        </header>
        <p>Blah</p>
      </center>
      <hr />
      <div id="post-stream">
        <center>
          <header>
            <h3>Books I'm *ahem* paging through</h3>
          </header>
          <ul>
          </ul>
        </center>
      </div>
      <hr />
    </div>
    <div id="recent-updates">
      <div id="liveplayer">
        <h3 id="action">😵‍💫 This widget should load shortly!</h3>
        <img src="/cover.png" id="cover">
        <strong id="title">Fingers Crossed</strong>
        <br />
        <i id="subtitle">It should update if things aren't broken</i>
        <br />
          <div id="progress">
            <i id="elapsed">00:00</i> / <i id="duration">59:59</i>
          </div>
      </div>
      <hr />
      <div id="post-stream">
        <h3>Recently updated pages</h3>
        {% set postslist = collections.blog %}
        {% include "postslist.njk" %}
      </div>
      <hr />
      <center>
        <div id="post-stream">
          <header>
            <h3>Games I'm (slowly) progressing through</h3>
          </header>
          <ul>
          </ul>
        </div>
      </center>
      <hr />
    </div>
  </div>
</article>
<script type="text/javascript" src="/js/live-player.js"></script>
